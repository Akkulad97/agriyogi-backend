# AgriYogi - Environment Configuration
# Copy to .env and update values for your environment

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_SECRET=dev-secret-change-in-production-to-32-char-random-string

# Database
DATABASE_URL=sqlite:///ledger.db
# For production: postgresql://user:password@localhost/agriyogi

# Security
CORS_ORIGINS=http://127.0.0.1:5000,http://localhost:5000
SECURE_COOKIES=False
SESSION_TIMEOUT=3600

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=100/hour
RATE_LIMIT_LOGIN=5/minute
RATE_LIMIT_REGISTER=3/hour

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/agriyogi.log

# Email (for future password reset)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# AWS/Cloud (optional)
AWS_REGION=us-east-1
S3_BUCKET=agriyogi-backups
